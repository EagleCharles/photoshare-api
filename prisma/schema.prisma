datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  name      String?
  role      String    @default("consumer") // Values: "creator" or "consumer"
  photos    Photo[]
  comments  Comment[]
  likes     Like[]
  createdAt DateTime  @default(now())
}

model Photo {
  id        Int       @id @default(autoincrement())
  url       String
  title     String
  caption   String?
  location  String?   // Added this
  people    String?   // Added this
  creator   User      @relation(fields: [creatorId], references: [id], onDelete: Cascade)
  creatorId Int
  comments  Comment[]
  likes     Like[]
  createdAt DateTime  @default(now())
}

model Comment {
  id        Int      @id @default(autoincrement())
  content   String
  photo     Photo    @relation(fields: [photoId], references: [id], onDelete: Cascade)
  photoId   Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int
  createdAt DateTime @default(now())
}

model Like {
  id      Int   @id @default(autoincrement())
  user    User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId  Int
  photo   Photo @relation(fields: [photoId], references: [id], onDelete: Cascade)
  photoId Int

  @@unique([userId, photoId])
}