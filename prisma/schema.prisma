datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String    
  name      String?
  role      String    @default("consumer")
  photos    Photo[]
  comments  Comment[]
  createdAt DateTime  @default(now())
  likes     Like[]
}

model Photo {
  id        Int       @id @default(autoincrement())
  url       String
  title     String
  caption   String?
  creator   User      @relation(fields: [creatorId], references: [id])
  creatorId Int
  comments  Comment[]
  likes     Like[]
  createdAt DateTime  @default(now())
}

model Comment {
  id        Int      @id @default(autoincrement())
  content   String
  // --- ADDED onDelete: Cascade HERE ---
  photo     Photo    @relation(fields: [photoId], references: [id], onDelete: Cascade)
  photoId   Int
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  createdAt DateTime @default(now())
}

model Like {
  id      Int   @id @default(autoincrement())
  user    User  @relation(fields: [userId], references: [id])
  userId  Int
  // --- ADDED onDelete: Cascade HERE ---
  photo   Photo @relation(fields: [photoId], references: [id], onDelete: Cascade)
  photoId Int

  @@unique([userId, photoId])
}